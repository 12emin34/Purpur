+    }
+
+    public void start() {
+        consolePanel.start();
+    }
+
+    public void close() {
+        if (!isClosing.getAndSet(true)) {
+            runFinalizers();
+        }
+
+    }
+
+    private void runFinalizers() {
+        finalizers.forEach(Runnable::run);
+    }
+}
